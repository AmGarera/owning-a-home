  <a href="#lc-input-{{form_id}}" class="lc-save-link lc-toggle first-save"><span class="cf-icon cf-icon-save"></span> Save inputs</a>
  <h3 class="visuallyhidden">Loan {{form_id}}</h3>
  <div class="input-subsection">
    <label for="location" class="label-float ">State</label>
    <div class="input-wrap"> <!-- use with columns with floated labels -->
      <div class="select-content">
        <select name="location-{{form_id}}" class="recalc" id="location" data-objectify="location">
